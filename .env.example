# Environment: DEVELOPMENT or PRODUCTION
ENV=DEVELOPMENT

# Database
# SQLite: sqlite:///./todo.db
# PostgreSQL: postgresql://user:password@localhost:5432/todo_db
DATABASE_URL=sqlite:///./todo.db

# JWT Settings
JWT_SECRET_KEY=your-secret-key-change-this-in-production-minimum-32-chars!!
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:8000"]

# Server
HOST=127.0.0.1
PORT=8000

# Logging
LOG_LEVEL=INFO
